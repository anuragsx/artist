<div class="row">
   <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
       <h1><%= truncate(@exhibition.title, length: 50) %> </h1>
   </div>
</div>

<br><br>

<p>Click on any image to see Image Gallery</p>

<br><br>

<div id="links">
    <% @exhibition.pictures.each do |picture| %>
      <a href="<%= asset_path(picture.picture(:medium)) %>" title="<%= picture.picture_file_name%>">
          <img src="<%= asset_path(picture.picture(:thumb)) %>" alt="Banana">
      </a>
    <% end -%>
</div>

<br><br>

<div id="blueimp-gallery" class="blueimp-gallery">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
</div>

<p>
  <strong>Title : </strong>
  <%= @exhibition.title%>
</p>

<p>
  <strong>Start Date :</strong>
  <%= @exhibition.from_data%>
</p>

<p>
  <strong>End Date :</strong>
  <%= @exhibition.to_date%>
</p>

<p>
  <strong>Address :</strong>
  <%= @exhibition.address%>
</p>

<p>
  <strong>Description :</strong>
  <%= @exhibition.description%>
</p>

<br><br>



<%#= embed(@news.youtube_url) %>

<br><br>

<!--<script src="js/blueimp-gallery.min.js"></script>-->
<script>
document.getElementById('links').onclick = function (event) {
    event = event || window.event;
    var target = event.target || event.srcElement,
        link = target.src ? target.parentNode : target,
        options = {index: link, event: event},
        links = this.getElementsByTagName('a');
    blueimp.Gallery(links, options);
};
</script>

<%#= link_to '<button type="button" class="btn btn-primary active">Back</button>'.html_safe, latest_news_path %>


