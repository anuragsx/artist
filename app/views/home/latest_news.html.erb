<div class="row">
   <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
   	   <h1>News </h1>
   </div>
</div>

<div class="row topsp">
<% @news.each do |news|%>
  <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3"> 
     <div class="perbox">
     		<%= image_tag news.image.url(:medium) %>
          <div class="txtbox">
            <%= truncate(news.title, length: 50) %> 
            <br> <br>
            <%= link_to '<button type="button" class="btn btn-default">Read More</button>'.html_safe, news_path(news) %>
          </div>
     </div>
  </div>
<% end -%>  
</div> 